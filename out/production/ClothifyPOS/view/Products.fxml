<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="500" prefWidth="700"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.ProductController">

    <Label text="Products Management" layoutX="250" layoutY="20" style="-fx-font-size:20px;"/>

    <!-- Form to Add/Edit Product -->
    <Label text="Name:" layoutX="20" layoutY="70"/>
    <TextField fx:id="nameField" layoutX="100" layoutY="70"/>

    <Label text="Category:" layoutX="20" layoutY="110"/>
    <TextField fx:id="categoryField" layoutX="100" layoutY="110"/>

    <Label text="Price:" layoutX="20" layoutY="150"/>
    <TextField fx:id="priceField" layoutX="100" layoutY="150"/>

    <Label text="Quantity:" layoutX="20" layoutY="190"/>
    <TextField fx:id="quantityField" layoutX="100" layoutY="190"/>

    <Button text="Add Product" fx:id="addBtn" layoutX="100" layoutY="230" onAction="#addProduct"/>
    <Button text="Update Product" fx:id="updateBtn" layoutX="200" layoutY="230" onAction="#updateProduct"/>
    <Button text="Delete Product" fx:id="deleteBtn" layoutX="330" layoutY="230" onAction="#deleteProduct"/>

    <!-- Table to Display Products -->
    <TableView fx:id="productTable" layoutX="20" layoutY="280" prefHeight="200" prefWidth="650">
        <columns>
            <TableColumn fx:id="colId" text="ID"/>
            <TableColumn fx:id="colName" text="Name"/>
            <TableColumn fx:id="colCategory" text="Category"/>
            <TableColumn fx:id="colPrice" text="Price"/>
            <TableColumn fx:id="colQuantity" text="Quantity"/>
        </columns>
    </TableView>

</AnchorPane>